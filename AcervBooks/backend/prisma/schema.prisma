// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  role Role @default(USER)

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  booksSaved BookSaved[]   

  @@map("users")
}

model Book {
  id       String @id @default(uuid())
  image    String
  synops   String
  genre    String
  year     Int
  volume   Int
  edition  String
  language String
  author   String
  publisher String

  booksSaved BookSaved[]

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  @@map("books")
}

model BookSaved {
  id String @id @default(uuid())

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [user_id], references: [id])
  book Book @relation(fields: [book_id], references: [id])

  book_id String
  user_id String

  @@map("books_saved")
  

}

enum Role {
  USER
  ADMIN
}
